{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@components": ["./src/app/components/index.ts"],
			"@hooks": ["./src/app/hooks/index.ts"],
			"@context": ["./src/app/context/index.ts"],
			"@actions": ["./src/app/actions/index.ts"],
			"@libs": ["./src/app/libs/index.ts"],
			"@types": ["./src/app/types/index.ts"],
			"@config": ["./src/app/config/index.ts"],
			"@utils": ["./src/app/utils/index.ts"]
			// "@constants": ["./src/app/utils/constants.ts"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
